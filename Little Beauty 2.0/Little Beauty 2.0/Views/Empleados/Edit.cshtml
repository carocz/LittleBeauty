@model Little_Beauty_2._0.Models.Empleados

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container body-content">
    <h2 class="text-center" style="color:pink">Edit</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

