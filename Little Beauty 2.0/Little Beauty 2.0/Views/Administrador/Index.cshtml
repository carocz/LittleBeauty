
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    DateTime dia = DateTime.Now;
    var hora = dia.Hour;
    string mensaje = "";
    if (hora < 12)
    {
        mensaje = "Buenos días";
    }
    if ((hora >= 12) && (hora < 19))
    {
        mensaje = "Buenas tardes";
    }
    if (hora >= 19)
    {
        mensaje = "Buenas noches";

    }
    string name = @Session["usr"].ToString();
    //string name = "";
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active ">
            <img src="~/Content/img/carrousel2.png" width="1900px" height="300px">
        </div>



        <div class="item">
            <img src="~/Content/img/carrousel1.png" width="1900px" height="300px">
        </div>



        <div class="item">
            <img src="~/Content/img/Sailboats and Skyscrapers Twitter Header.png" width="1900px" height="300px">
        </div>
    </div>



    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container body-content text-center">
    <hr/>
    <h1> </h1>
    <div class="col-md-12">
        <div class="row">
            <h1 style="color:pink" class="text-center"><b>@mensaje @name ♡</b></h1>
        </div>
    </div>
</div>
