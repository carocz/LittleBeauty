@model Little_Beauty_2._0.Models.Clientes

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Correo = Session["correo"];
}

<div class="container body-content text-center">
    <h2 class="text-center" style="color:pink">Favor de registrar su informacion</h2>

    @*using (Html.BeginForm()) *@
    @using (Html.BeginForm("Create", "Clientes", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal text-center">
            <h4>Clientes</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Id de país</h5>
                <div class="col-md-6">
                    @Html.DropDownList("id_pais", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_pais, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Id de entidad</h5>
                <div class="col-md-6">
                    @Html.DropDownList("id_entidad", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_entidad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Id de municipio</h5>
                <div class="col-md-6">
                    @Html.DropDownList("id_municipio", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_municipio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Nombre</h5>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.nombre_cliente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre_cliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Dirección</h5>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Apellidos</h5>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.apellido_cliente, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.apellido_cliente, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Código postal</h5>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.codigo_postal, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.codigo_postal, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Numero de tarjeta</h5>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.num_tarjeta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.num_tarjeta, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Telefeno</h5>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Correo</h5>
                <div class="col-md-6">
                    @*Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.TextBoxFor(model => model.email, new { @Value = ViewBag.Correo, @readonly = true, @class = "control-label col-md-6" })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Contraseña</h5>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <hr />
                <h5 class="control-label col-md-4 text-center">Seleccione el tipo de tarjeta</h5>
                <hr />
                <div class="col-md-4">
                    <div class="row">
                        @Html.RadioButton("TipoTarj", "Visa")
                        <img class="img-responsive" src="~/Content/img/Visa.png" width="50px" />
                    </div>
                    <div class="row">
                        @Html.RadioButton("TipoTarj", "Mastercard")
                        <img class="img-responsive" src="~/Content/img/Master.png" width="50px" />
                    </div>
                    <div class="row">
                        @Html.RadioButton("TipoTarj", "American")
                        <img class="img-responsive" src="~/Content/img/American.png" width="50px" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-4">
                    <div class="row">
                        <h5 class="control-label col-md-4 text-center">Mes de vencimiento</h5>
                        @Html.Editor("Mes", new { htmlAttributes = new { @class = "form-control form-control" } })
                    </div>
                    <div class="row">
                        <h5 class="control-label col-md-4 text-center">Año de vencmiento</h5>
                        @Html.Editor("Anio", new { htmlAttributes = new { @class = "form-control form-control" } })
                    </div>
                    <div class="row">
                        <h5 class="control-label col-md-4 text-center">Numero de CVV de atrás</h5>
                        @Html.Editor("CVV", new { htmlAttributes = new { @class = "form-control form-control" } })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" style="background-color:palevioletred" />
                </div>
            </div>
        </div>
    }
</div>
    <div>
        @Html.ActionLink("Ir a lista", "Index")
    </div>
