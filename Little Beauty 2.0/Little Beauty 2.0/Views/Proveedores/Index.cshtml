@model IEnumerable<Little_Beauty_2._0.Models.Proveedores>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container body-content">
    <h2 class="text-center" style="color:pink">Proveedores</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Direccion
            </th>
            <th>
                Apellido
            </th>
            <th>
                RFC
            </th>
            <th>
                Codigo postal
            </th>
            <th>
                Telefono
            </th>
            <th>
                Correo
            </th>
            <th>
                Contraseña
            </th>
            <th>
                Entidad
            </th>
            <th>
                Municipio
            </th>
            <th>
                Pais
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_proveedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido_proveedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rfc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.codigo_postal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Entidades.nombre_entidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Municipios.nombre_municipio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paises.nombre_pais)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.id_proveedor }, new { @class = "glyphicon glyphicon-pencil", @style = "color:palevioletred" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.id_proveedor }, new { @class = "glyphicon glyphicon-file", @style = "color:palevioletred" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.id_proveedor }, new { @class = "glyphicon glyphicon-trash", @style = "color:palevioletred" })
                </td>
            </tr>
        }

    </table>
</div>