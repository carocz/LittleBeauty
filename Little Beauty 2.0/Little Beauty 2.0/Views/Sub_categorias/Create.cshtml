@model Little_Beauty_2._0.Models.Sub_categorias

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}
<div class="container body-content text-center">
    <h2 class="text-center" style="color:pink">Create</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal text-center">
            <h4>Sub_categorias</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Sub-Categoria</h5>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.nombre_sub_categoria, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre_sub_categoria, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-4 text-center">Categoria</h5>
                <div class="col-md-6">
                    @Html.DropDownList("id_categoria", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_categoria, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-6">
                    <input type="submit" value="Create" class="btn btn-default" style="background-color:palevioletred" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Ir a la lista", "Index")
    </div>
</div>
