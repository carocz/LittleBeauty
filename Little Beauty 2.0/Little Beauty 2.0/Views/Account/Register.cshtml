@model Little_Beauty_2._0.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<div class="container body-content text-center">
    <img src="~/Content/img/Registrarse.png" height="200px" width="400px" />



    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", style = "text center" }))
    {
        @Html.AntiForgeryToken()
        <h4>Cree una cuenta nueva.</h4>
        <hr />

             @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group text-center">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-4 text-center control-label" })
            <div class="col-md-8 text-center">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            </div>
            <div class="form-group text-center">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-4 text-center control-label" })
            <div class="col-md-8 text-center">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            </div>
            <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 text-center control-label" })
            <div class="col-md-8 text-center">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            </div>
            <div class="form-group">
            <div class="col-md-offset-2 col-md-8 text-center">
            <input type="submit" class="btn btn-default" style="background-color:palevioletred;text-decoration-color:black" value="Registrarse" />
            </div>
            </div>
            }


            </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

