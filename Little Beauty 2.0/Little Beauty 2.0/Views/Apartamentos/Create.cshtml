@model Little_Beauty_2._0.Models.Apartamentos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}
<div class="container body-content text-center">
    <h2 class="text-center" style="color:pink">Create</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal text-center">
            <h4>Apartamentos</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })
            <div class="form-group">
                @Html.LabelFor(model => model.nombre_apartamento, htmlAttributes: new { @class = "control-label  col-md-4 text-center" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.nombre_apartamento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre_apartamento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.id_empleado_encargado, "id_empleado_encargado", htmlAttributes: new { @class = "control-label  col-md-4 text-center" })
                <div class="col-md-6">
                    @Html.DropDownList("id_empleado_encargado", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_empleado_encargado, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label  col-md-4 text-center" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-6">
                    <input type="submit" value="Create" class="btn btn-default" style="background-color:palevioletred"/>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Ir a lista", "Index")
    </div>
</div>